<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".EditProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_notes"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn_e"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="342dp"
                android:background="@android:color/transparent"
                android:padding="6dp"
                android:src="@drawable/ic_back" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="718dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="25dp">


        <EditText
            android:id="@+id/login_e"
            android:layout_width="257dp"
            android:layout_height="66dp"
            android:layout_above="@+id/mail_e"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="Логин"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mail_e"
            android:layout_width="257dp"
            android:layout_height="66dp"
            android:layout_above="@+id/password_e"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="Адрес электронной почты"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_e"
            android:layout_width="257dp"
            android:layout_height="66dp"
            android:layout_above="@+id/password2_e"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password2_e"
            android:layout_width="257dp"
            android:layout_height="66dp"
            android:layout_above="@+id/save_e"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="Повтор пароль"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <Button
            android:id="@+id/save_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22sp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="37dp"
            android:backgroundTint="#4FBEC3"
            android:text="СОХРАНИТЬ"
            android:textColor="#5D5C5C"
            android:textSize="19sp"
            android:textStyle="bold"
            app:cornerRadius="50dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_e"
            android:layout_marginStart="30sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="47dp"
            android:text="РЕДАКТИРОВАНИЕ ПРОФИЛЯ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>